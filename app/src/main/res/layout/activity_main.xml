<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_vote"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="ADD VOTE" />

    <TextView
        android:id="@+id/tv_total_pemberi_bintang"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:drawableLeft="@drawable/ic_person_primary_dark"
        android:gravity="center|left"
        tools:text="80 total"
        android:textColor="#000000"/>

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!--1-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_value_10dp"
                android:layout_marginRight="@dimen/margin_value_10dp">

                <!--1-->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/jyunhao" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Wang Jyun Hao"
                    android:layout_marginLeft="200dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="YG Entertainment"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="200dp"
                    android:textSize="14sp" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constrain_layout_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="200dp">

                    <LinearLayout
                        android:id="@+id/ll_percentage_5"
                        android:layout_width="180dp"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <!--2-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_value_10dp"
                android:layout_marginLeft="@dimen/margin_value_10dp"
                android:layout_marginRight="@dimen/margin_value_10dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/minkyu" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Kim Min Kyu"
                    android:layout_marginLeft="200dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="JellyFish Entertainment"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="200dp"
                    android:textSize="14sp" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constrain_layout_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="200dp">

                    <LinearLayout
                        android:id="@+id/ll_percentage_4"
                        android:layout_width="180dp"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <!--3-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_value_10dp"
                android:layout_marginLeft="@dimen/margin_value_10dp"
                android:layout_marginRight="@dimen/margin_value_10dp">

                <!--1-->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/yohan" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Kim Yo Han"
                    android:layout_marginLeft="200dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="OUI Entertainment"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="200dp"
                    android:textSize="14sp" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constrain_layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="200dp">

                    <LinearLayout
                        android:id="@+id/ll_percentage_3"
                        android:layout_width="180dp"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <!--4-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_value_10dp"
                android:layout_marginLeft="@dimen/margin_value_10dp"
                android:layout_marginRight="@dimen/margin_value_10dp">

                <!--1-->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/wooseok" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Kim Woo Seok"
                    android:layout_marginLeft="200dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="TOP Media"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="200dp"
                    android:textSize="14sp" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constrain_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="200dp">

                    <LinearLayout
                        android:id="@+id/ll_percentage_2"
                        android:layout_width="180dp"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <!--5-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_value_10dp"
                android:layout_marginLeft="@dimen/margin_value_10dp"
                android:layout_marginRight="@dimen/margin_value_10dp">

                <!--1-->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/sungyeon" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Kim Sung Yeon"
                    android:layout_marginLeft="200dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Independent Trainee"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="200dp"
                    android:textSize="14sp" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constrain_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="200dp">

                    <LinearLayout
                        android:id="@+id/ll_percentage_1"
                        android:layout_width="180dp"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>

</LinearLayout>